<table>
  <tbody>
    <% book_comments.each do |book_comment| %>
      <tr>
        <td><%= image_tag book_comment.user.get_profile_image(85,85) %></td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
          <td><%= link_to "Destroy", book_book_comment_path(book_comment.book.id,book_comment.id), method: :delete, remote: true %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
