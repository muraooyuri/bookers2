<main>
 <p id= "notice"></p>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
    <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
   <% end %>
 <h2>User info</h2>
   <%= form_with model: @user do |f| %>
    <label for="userName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
    <label for="userImage">Image</label><br>
    <%= f.file_field :profile_image, placeholder: "ユーザー画像", accept: "image/*" %><br>
    <label for="userBody">Introduction</label><br>
    <%= f.text_area :introduction%><br>
    <%= f.submit "Update User" %>
   <% end %>
   </div>
  </div>
 </div>
</main>